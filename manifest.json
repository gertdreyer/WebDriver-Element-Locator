{
  "name": "WebDriver Element Locator",
  "description": "Chrome Port of WebDriver Element Locator",
  "version": "1.3",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "clipboardWrite",
    "clipboardRead"
  ],
  "icons": { "32": "webdev-32.png", "64": "webdev-64.png" }
}
